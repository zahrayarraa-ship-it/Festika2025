        function initializePlatform() {
            // Navigation dengan fungsi sebenarnya
            document.querySelectorAll('.nav-item').forEach(item => {
                item.addEventListener('click', function() {
                    document.querySelectorAll('.nav-item').forEach(nav => nav.classList.remove('active'));
                    this.classList.add('active');
                    const page = this.getAttribute('data-page');
                    showPage(page);
                });
            });

            // Logo click - kembali ke home
            document.getElementById('logo').addEventListener('click', function() {
                showPage('home');
                showToast('Selamat datang di NusaKita! üåü');
            });

            // Hero section buttons
            document.getElementById('startLearning').addEventListener('click', function() {
                showPage('learn');
            });

            document.getElementById('quickTour').addEventListener('click', function() {
                showQuickTour();
            });

            // Hub cards buttons
            document.querySelectorAll('.hub-card-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const type = this.getAttribute('data-type');
                    handleHubCardButton(type);
                });
            });

            // Hub cards main area
            document.querySelectorAll('.hub-card').forEach(card => {
                card.addEventListener('click', function() {
                    const title = this.querySelector('.card-title').textContent;
                    showToast(`Membuka: ${title}`);
                    
                    if (this.id === 'interactiveClass') {
                        showPage('learn');
                    } else if (this.id === 'culturalExploration') {
                        showPage('explore');
                    } else if (this.id === 'educationalGames') {
                        showEducationalGames();
                    } else if (this.id === 'learningCommunity') {
                        showLearningCommunity();
                    }
                });
            });

            // Quick access topics buttons
            document.querySelectorAll('.quick-access-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const topic = this.getAttribute('data-topic');
                    startTopic(topic);
                });
            });

            // Quick access cards
            document.querySelectorAll('[data-topic]').forEach(topic => {
                topic.addEventListener('click', function() {
                    const topicName = this.getAttribute('data-topic');
                    startTopic(topicName);
                });
            });

            // User level badge
            document.getElementById('userLevel').addEventListener('click', function() {
                showPage('progress');
            });

            // Login button
            document.getElementById('loginBtn').addEventListener('click', function() {
                showLoginModal();
            });

            // Modal close
            document.getElementById('closeModal').addEventListener('click', closeModal);
            document.getElementById('mainModal').addEventListener('click', function(e) {
                if (e.target === this) closeModal();
            });

            // Populate regions grid
            populateRegionsGrid();

            // Initialize user progress
            updateUserProgress();
        }

        function populateRegionsGrid() {
            const grid = document.getElementById('region-grid');
            grid.innerHTML = '';
            
            allRegions.forEach(region => {
                const regionCard = document.createElement('div');
                regionCard.className = 'region-card';
                regionCard.style.borderColor = region.color;
                regionCard.innerHTML = `
                    <div class="region-icon">${region.icon}</div>
                    <h4 style="color: ${region.color};">${region.name}</h4>
                    <p style="color: #666; font-size: 0.8rem; margin-top: 0.5rem;">${region.capital}</p>
                `;
                regionCard.addEventListener('click', () => exploreRegion(region.id));
                grid.appendChild(regionCard);
            });
        }

        function exploreRegion(regionId) {
            const region = allRegions.find(r => r.id === regionId);
            if (!region) return;

            if (regionContent[regionId]) {
                showModal(`Budaya ${region.name}`, regionContent[regionId].content);
            } else {
                showModal(`Budaya ${region.name}`, `
                    <div style="text-align: center; padding: 2rem;">
                        <div style="font-size: 4rem;">${region.icon}</div>
                        <h3 style="color: ${region.color}; margin-bottom: 1rem;">${region.name}</h3>
                        <p style="margin-bottom: 1.5rem;">Ibukota: ${region.capital}</p>
                        <p>Konten budaya untuk ${region.name} sedang dalam pengembangan. Mari jelajahi provinsi lainnya!</p>
                    </div>
                `);
            }
        }

        function showTopicSelection() {
            showModal('Pilih Topik Belajar', `
                <h3 style="color: var(--primary-purple); margin-bottom: 1rem;">Topik Budaya Nusantara</h3>
                <p style="margin-bottom: 1.5rem;">Pilih topik yang ingin Anda pelajari:</p>
                
                <div style="display: grid; gap: 1rem;">
                    ${Object.entries(learningContent).map(([key, topic]) => `
                        <div class="hub-card" style="padding: 1.5rem; cursor: pointer;" onclick="startTopic('${key}')">
                            <div style="display: flex; align-items: center; gap: 1rem;">
                                <div style="font-size: 2rem;">${getTopicIcon(key)}</div>
                                <div style="flex: 1;">
                                    <h4 style="color: var(--primary-purple); margin-bottom: 0.5rem;">${topic.title}</h4>
                                    <p style="color: #666; font-size: 0.9rem;">${topic.description}</p>
                                </div>
                            </div>
                        </div>
                    `).join('')}
                </div>
            `);
        }

        function getTopicIcon(topic) {
            const icons = {
                'batik': 'üé®',
                'wayang': 'üé≠',
                'tarian': 'üíÉ',
                'kuliner': 'üçõ',
                'rumah-adat': 'üè†',
                'alat-musik': 'üéµ'
            };
            return icons[topic] || 'üìö';
        }

        function startTopic(topic) {
            if (learningContent[topic]) {
                userData.currentTopic = topic;
                startLesson(topic, 0);
            } else {
                showModal('Materi Sedang Dikembangkan', `
                    <div style="text-align: center; padding: 2rem;">
                        <div style="font-size: 4rem;">üöß</div>
                        <h3 style="color: var(--primary-purple); margin-bottom: 1rem;">Materi Sedang Dikembangkan</h3>
                        <p style="margin-bottom: 1.5rem;">Topik <strong>${topic}</strong> sedang dalam proses pengembangan. Silakan pilih topik lain yang tersedia.</p>
                        <button class="action-btn" onclick="showTopicSelection()">
                            <i class="fas fa-book"></i> Pilih Topik Lain
                        </button>
                    </div>
                `);
            }
        }

        function startLesson(topic, lessonIndex) {
            const topicData = learningContent[topic];
            const lesson = topicData.lessons[lessonIndex];
            
            if (!lesson) {
                completeTopic(topic);
                return;
            }

            showModal(`${topicData.title} - ${lesson.title}`, `
                <div class="progress-container">
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: ${(lessonIndex / topicData.lessons.length) * 100}%"></div>
                    </div>
                    <div class="progress-text">
                        <span>Progress</span>
                        <span>${lessonIndex + 1}/${topicData.lessons.length}</span>
                    </div>
                </div>
                
                ${lesson.content}
                
                <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                    ${lessonIndex > 0 ? `
                        <button class="action-btn btn-outline" onclick="startLesson('${topic}', ${lessonIndex - 1})" style="flex: 1;">
                            <i class="fas fa-arrow-left"></i> Sebelumnya
                        </button>
                    ` : ''}
                    
                    <button class="action-btn" onclick="checkAnswerAndContinue('${topic}', ${lessonIndex})" style="flex: 2;">
                        ${lessonIndex === topicData.lessons.length - 1 ? 'Selesaikan Topik' : 'Lanjutkan'}
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
            `);

            // Setup quiz options
            setTimeout(() => {
                document.querySelectorAll('.quiz-option').forEach(option => {
                    option.addEventListener('click', function() {
                        document.querySelectorAll('.quiz-option').forEach(opt => {
                            opt.classList.remove('selected');
                        });
                        this.classList.add('selected');
                    });
                });
            }, 100);
        }

        function checkAnswerAndContinue(topic, lessonIndex) {
            const selectedOption = document.querySelector('.quiz-option.selected');
            
            if (!selectedOption) {
                showToast('Silakan pilih jawaban terlebih dahulu!', 'error');
                return;
            }

            const isCorrect = selectedOption.getAttribute('data-correct') === 'true';
            
            if (isCorrect) {
                showToast('Jawaban benar! üéâ', 'success');
                userData.progress.totalXP += 10;
                userData.progress.completedLessons++;
                updateUserProgress();
                
                setTimeout(() => {
                    startLesson(topic, lessonIndex + 1);
                }, 1500);
            } else {
                showToast('Jawaban salah, coba lagi!', 'error');
                selectedOption.style.background = '#ffebee';
                selectedOption.style.borderColor = '#f44336';
                selectedOption.style.color = '#d32f2f';
            }
        }

        function completeTopic(topic) {
            showModal('Topik Selesai! üéâ', `
                <div style="text-align: center; padding: 2rem;">
                    <div style="font-size: 4rem;">üèÜ</div>
                    <h3 style="color: var(--primary-purple); margin-bottom: 1rem;">Selamat!</h3>
                    <p style="margin-bottom: 1.5rem;">Anda telah menyelesaikan topik <strong>${learningContent[topic].title}</strong></p>
                    
                    <div style="background: var(--light-bg); padding: 1.5rem; border-radius: 15px; margin: 1.5rem 0;">
                        <h4 style="color: var(--primary-purple); margin-bottom: 1rem;">Pencapaian Anda:</h4>
                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; text-align: center;">
                            <div>
                                <div style="font-size: 1.5rem; color: var(--accent-yellow);">‚≠ê</div>
                                <div style="font-weight: bold;">${userData.progress.totalXP} XP</div>
                                <div style="font-size: 0.8rem; color: #666;">Total XP</div>
                            </div>
                            <div>
                                <div style="font-size: 1.5rem; color: var(--accent-teal);">üìö</div>
                                <div style="font-weight: bold;">${userData.progress.completedLessons}</div>
                                <div style="font-size: 0.8rem; color: #666;">Pelajaran</div>
                            </div>
                        </div>
                    </div>
                    
                    <button class="action-btn" onclick="showPage('learn')" style="margin-top: 1rem;">
                        <i class="fas fa-book"></i> Pelajari Topik Lain
                    </button>
                </div>
            `);
            
            // Update level based on XP
            if (userData.progress.totalXP >= 200) {
                userData.level = "Ahli Budaya";
            } else if (userData.progress.totalXP >= 100) {
                userData.level = "Menengah";
            } else if (userData.progress.totalXP >= 50) {
                userData.level = "Pemula Tingkat Lanjut";
            }
            updateUserProgress();
        }

        function showPage(page) {
            // Sembunyikan semua section
            document.querySelectorAll('.page-section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Tampilkan section yang dipilih
            const targetPage = document.getElementById(`${page}-page`);
            if (targetPage) {
                targetPage.classList.add('active');
            }
            
            // Jika halaman progress, update kontennya
            if (page === 'progress') {
                showUserProgressInPage();
            }
            
            showToast(`Membuka: ${getPageTitle(page)}`);
        }

        function getPageTitle(page) {
            const titles = {
                'home': 'Beranda',
                'learn': 'Pusat Pembelajaran',
                'explore': 'Eksplorasi Budaya',
                'progress': 'Progress Belajar'
            };
            return titles[page] || 'Halaman';
        }

        function showUserProgressInPage() {
            const progressPercent = (userData.progress.completedLessons / userData.progress.totalLessons) * 100;
            
            const progressContent = `
                <div style="text-align: center; margin-bottom: 2rem;">
                    <div style="font-size: 3rem;">üìä</div>
                    <h3 style="color: var(--primary-purple); margin-bottom: 0.5rem;">${userData.name}</h3>
                    <div style="background: var(--accent-yellow); color: white; padding: 0.5rem 1rem; border-radius: 20px; display: inline-block; font-weight: bold;">
                        Level: ${userData.level}
                    </div>
                </div>
                
                <div class="progress-container">
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: ${progressPercent}%"></div>
                    </div>
                    <div class="progress-text">
                        <span>Progress Keseluruhan</span>
                        <span>${Math.round(progressPercent)}%</span>
                    </div>
                </div>
                
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin: 2rem 0;">
                    <div style="text-align: center; padding: 1rem; background: var(--light-bg); border-radius: 10px;">
                        <div style="font-size: 1.5rem; color: var(--accent-yellow);">‚≠ê</div>
                        <div style="font-size: 1.5rem; font-weight: bold;">${userData.progress.totalXP}</div>
                        <div style="font-size: 0.8rem; color: #666;">Total XP</div>
                    </div>
                    
                    <div style="text-align: center; padding: 1rem; background: var(--light-bg); border-radius: 10px;">
                        <div style="font-size: 1.5rem; color: var(--accent-teal);">üî•</div>
                        <div style="font-size: 1.5rem; font-weight: bold;">${userData.progress.currentStreak}</div>
                        <div style="font-size: 0.8rem; color: #666;">Hari Beruntun</div>
                    </div>
                    
                    <div style="text-align: center; padding: 1rem; background: var(--light-bg); border-radius: 10px;">
                        <div style="font-size: 1.5rem; color: var(--accent-orange);">üìö</div>
                        <div style="font-size: 1.5rem; font-weight: bold;">${userData.progress.completedLessons}</div>
                        <div style="font-size: 0.8rem; color: #666;">Pelajaran</div>
                    </div>
                    
                    <div style="text-align: center; padding: 1rem; background: var(--light-bg); border-radius: 10px;">
                        <div style="font-size: 1.5rem; color: var(--secondary-purple);">‚è±Ô∏è</div>
                        <div style="font-size: 1.5rem; font-weight: bold;">${userData.progress.completedLessons * 15}</div>
                        <div style="font-size: 0.8rem; color: #666;">Menit Belajar</div>
                    </div>
                </div>
                
                <div style="text-align: center;">
                    <button class="action-btn" onclick="showPage('learn')">
                        <i class="fas fa-plus"></i> Lanjutkan Belajar
                    </button>
                </div>
            `;
            
            document.getElementById('progress-content').innerHTML = progressContent;
        }

        function handleHubCardButton(type) {
            switch(type) {
                case 'interactiveClass':
                    showPage('learn');
                    break;
                case 'culturalExploration':
                    showPage('explore');
                    break;
                case 'educationalGames':
                    showEducationalGames();
                    break;
                case 'learningCommunity':
                    showLearningCommunity();
                    break;
            }
        }

        function showEducationalGames() {
            showModal('Permainan Edukasi', `
                <h3 style="color: var(--primary-purple); margin-bottom: 1rem;">Belajar Sambil Bermain</h3>
                <p style="margin-bottom: 1.5rem;">Pilih permainan edukasi budaya:</p>
                
                <div style="display: grid; gap: 1.5rem;">
                    <div class="hub-card" style="padding: 1.5rem; cursor: pointer;" onclick="startGame('tebak-batik')">
                        <div style="display: flex; align-items: center; gap: 1rem;">
                            <div style="font-size: 3rem;">üé®</div>
                            <div style="flex: 1;">
                                <h4 style="color: var(--primary-purple); margin-bottom: 0.5rem;">Tebak Motif Batik</h4>
                                <p style="color: #666; font-size: 0.9rem;">Tebak nama motif batik dari gambarnya</p>
                            </div>
                            <div style="background: var(--accent-yellow); color: white; padding: 0.5rem 1rem; border-radius: 20px; font-size: 0.8rem;">
                                +10 XP
                            </div>
                        </div>
                    </div>
                    
                    <div class="hub-card" style="padding: 1.5rem; cursor: pointer;" onclick="startGame('alat-musik')">
                        <div style="display: flex; align-items: center; gap: 1rem;">
                            <div style="font-size: 3rem;">üéµ</div>
                            <div style="flex: 1;">
                                <h4 style="color: var(--primary-purple); margin-bottom: 0.5rem;">Pasangkan Alat Musik</h4>
                                <p style="color: #666; font-size: 0.9rem;">Pasangkan alat musik dengan daerah asalnya</p>
                            </div>
                            <div style="background: var(--accent-teal); color: white; padding: 0.5rem 1rem; border-radius: 20px; font-size: 0.8rem;">
                                +15 XP
                            </div>
                        </div>
                    </div>
                    
                    <div class="hub-card" style="padding: 1.5rem; cursor: pointer;" onclick="startGame('tebak-tarian')">
                        <div style="display: flex; align-items: center; gap: 1rem;">
                            <div style="font-size: 3rem;">üíÉ</div>
                            <div style="flex: 1;">
                                <h4 style="color: var(--primary-purple); margin-bottom: 0.5rem;">Tebak Tarian</h4>
                                <p style="color: #666; font-size: 0.9rem;">Tebak nama tarian dari gerakannya</p>
                            </div>
                            <div style="background: var(--secondary-purple); color: white; padding: 0.5rem 1rem; border-radius: 20px; font-size: 0.8rem;">
                                +12 XP
                            </div>
                        </div>
                    </div>
                </div>
            `);
        }

        function startGame(gameType) {
            let gameContent = '';
            let gameTitle = '';
            
            switch(gameType) {
                case 'tebak-batik':
                    gameTitle = 'Tebak Motif Batik';
                    gameContent = `
                        <div class="game-container">
                            <h3 style="color: var(--primary-purple); margin-bottom: 1rem;">${gameTitle}</h3>
                            <p style="margin-bottom: 2rem;">Tebak nama motif batik berdasarkan gambar!</p>
                            
                            <div style="background: var(--light-bg); padding: 2rem; border-radius: 15px; margin-bottom: 2rem;">
                                <div style="font-size: 4rem; margin-bottom: 1rem;">üåÄ</div>
                                <h4 style="color: var(--primary-purple);">Motif Batik</h4>
                            </div>
                            
                            <div class="game-board">
                                <div class="game-card" onclick="checkGameAnswer('parang', 'tebak-batik')">
                                    <h4>Parang</h4>
                                </div>
                                <div class="game-card" onclick="checkGameAnswer('kawung', 'tebak-batik')">
                                    <h4>Kawung</h4>
                                </div>
                                <div class="game-card" onclick="checkGameAnswer('megamendung', 'tebak-batik')">
                                    <h4>Megamendung</h4>
                                </div>
                                <div class="game-card" onclick="checkGameAnswer('truntum', 'tebak-batik')">
                                    <h4>Truntum</h4>
                                </div>
                            </div>
                        </div>
                    `;
                    break;
                    
                case 'alat-musik':
                    gameTitle = 'Pasangkan Alat Musik';
                    gameContent = `
                        <div class="game-container">
                            <h3 style="color: var(--primary-purple); margin-bottom: 1rem;">${gameTitle}</h3>
                            <p style="margin-bottom: 2rem;">Pasangkan alat musik dengan daerah asalnya!</p>
                            
                            <div class="game-board">
                                <div class="game-card" onclick="checkGameAnswer('gamelan', 'alat-musik')">
                                    <div style="font-size: 2rem;">ü•Å</div>
                                    <h4>Gamelan</h4>
                                    <p style="font-size: 0.8rem; color: #666;">Jawa</p>
                                </div>
                                <div class="game-card" onclick="checkGameAnswer('sasando', 'alat-musik')">
                                    <div style="font-size: 2rem;">üéµ</div>
                                    <h4>Sasando</h4>
                                    <p style="font-size: 0.8rem; color: #666;">NTT</p>
                                </div>
                                <div class="game-card" onclick="checkGameAnswer('angklung', 'alat-musik')">
                                    <div style="font-size: 2rem;">üéã</div>
                                    <h4>Angklung</h4>
                                    <p style="font-size: 0.8rem; color: #666;">Jawa Barat</p>
                                </div>
                                <div class="game-card" onclick="checkGameAnswer('tifa', 'alat-musik')">
                                    <div style="font-size: 2rem;">üé™</div>
                                    <h4>Tifa</h4>
                                    <p style="font-size: 0.8rem; color: #666;">Papua</p>
                                </div>
                            </div>
                        </div>
                    `;
                    break;
                    
                case 'tebak-tarian':
                    gameTitle = 'Tebak Tarian';
                    gameContent = `
                        <div class="game-container">
                            <h3 style="color: var(--primary-purple); margin-bottom: 1rem;">${gameTitle}</h3>
                            <p style="margin-bottom: 2rem;">Tebak nama tarian tradisional!</p>
                            
                            <div style="background: var(--light-bg); padding: 2rem; border-radius: 15px; margin-bottom: 2rem;">
                                <div style="font-size: 4rem; margin-bottom: 1rem;">üíÉ</div>
                                <p>Tarian dari Bali dengan gerakan dinamis</p>
                            </div>
                            
                            <div class="game-board">
                                <div class="game-card" onclick="checkGameAnswer('kecak', 'tebak-tarian')">
                                    <h4>Tari Kecak</h4>
                                </div>
                                <div class="game-card" onclick="checkGameAnswer('pendet', 'tebak-tarian')">
                                    <h4>Tari Pendet</h4>
                                </div>
                                <div class="game-card" onclick="checkGameAnswer('legong', 'tebak-tarian')">
                                    <h4>Tari Legong</h4>
                                </div>
                                <div class="game-card" onclick="checkGameAnswer('barong', 'tebak-tarian')">
                                    <h4>Tari Barong</h4>
                                </div>
                            </div>
                        </div>
                    `;
                    break;
            }
            
            showModal(gameTitle, gameContent);
        }

        function checkGameAnswer(answer, gameType) {
            const correctAnswers = {
                'tebak-batik': 'parang',
                'alat-musik': 'gamelan',
                'tebak-tarian': 'kecak'
            };
            
            if (answer === correctAnswers[gameType]) {
                showToast('Jawaban benar! +10 XP üéâ', 'success');
                userData.progress.totalXP += 10;
                updateUserProgress();
                setTimeout(() => closeModal(), 1500);
            } else {
                showToast('Coba lagi! üí™', 'error');
            }
        }

        function showLearningCommunity() {
            showModal('Komunitas Belajar', `
                <h3 style="color: var(--primary-purple); margin-bottom: 1rem;">Bergabung dengan Komunitas</h3>
                <p style="margin-bottom: 1.5rem;">Terhubung dengan pencinta budaya lainnya:</p>
                
                <div style="display: grid; gap: 1.5rem;">
                    <div class="hub-card" style="padding: 1.5rem;">
                        <h4 style="color: var(--primary-purple); margin-bottom: 1rem;">üë• Grup Diskusi</h4>
                        <p>Bergabung dengan grup diskusi berdasarkan minat budaya tertentu</p>
                        <button class="action-btn btn-outline" style="margin-top: 1rem; width: 100%;" onclick="showDiscussionGroups()">
                            <i class="fas fa-comments"></i> Lihat Grup
                        </button>
                    </div>
                    
                    <div class="hub-card" style="padding: 1.5rem;">
                        <h4 style="color: var(--primary-purple); margin-bottom: 1rem;">üìÖ Event Budaya</h4>
                        <p>Ikuti event dan workshop budaya secara online dan offline</p>
                        <button class="action-btn btn-outline" style="margin-top: 1rem; width: 100%;" onclick="showEvents()">
                            <i class="fas fa-calendar-alt"></i> Lihat Jadwal
                        </button>
                    </div>
                    
                    <div class="hub-card" style="padding: 1.5rem;">
                        <h4 style="color: var(--primary-purple); margin-bottom: 1rem;">ü§ù Proyek Kolaborasi</h4>
                        <p>Ikuti proyek kolaborasi dokumentasi dan pelestarian budaya</p>
                        <button class="action-btn btn-outline" style="margin-top: 1rem; width: 100%;" onclick="showProjects()">
                            <i class="fas fa-hands-helping"></i> Jelajahi Proyek
                        </button>
                    </div>
                </div>
            `);
        }

        function showDiscussionGroups() {
            showModal('Grup Diskusi', `
                <div style="text-align: center;">
                    <div style="font-size: 4rem;">üë•</div>
                    <h3 style="color: var(--primary-purple); margin-bottom: 1rem;">Grup Diskusi Budaya</h3>
                    <p style="margin-bottom: 2rem;">Bergabung dengan grup diskusi berdasarkan minat:</p>
                    
                    <div style="display: grid; gap: 1rem;">
                        <div class="hub-card" style="padding: 1.5rem; text-align: left; cursor: pointer;" onclick="showToast('Bergabung dengan Grup Batik üé®', 'success')">
