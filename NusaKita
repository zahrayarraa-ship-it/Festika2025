        function showUserProgress() {
            const progressPercent = (userData.progress.completedLessons / userData.progress.totalLessons) * 100;
            
            showModal('Progress Belajar Anda', `
                <div style="text-align: center; margin-bottom: 2rem;">
                    <div style="font-size: 3rem;">üìä</div>
                    <h3 style="color: var(--primary-purple); margin-bottom: 0.5rem;">${userData.name}</h3>
                    <div style="background: var(--accent-yellow); color: white; padding: 0.5rem 1rem; border-radius: 20px; display: inline-block; font-weight: bold;">
                        Level: ${userData.level}
                    </div>
                </div>
                
                <div class="progress-container">
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: ${progressPercent}%"></div>
                    </div>
                    <div class="progress-text">
                        <span>Progress Keseluruhan</span>
                        <span>${Math.round(progressPercent)}%</span>
                    </div>
                </div>
                
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin: 2rem 0;">
                    <div style="text-align: center; padding: 1rem; background: var(--light-bg); border-radius: 10px;">
                        <div style="font-size: 1.5rem; color: var(--accent-yellow);">‚≠ê</div>
                        <div style="font-size: 1.5rem; font-weight: bold;">${userData.progress.totalXP}</div>
                        <div style="font-size: 0.8rem; color: #666;">Total XP</div>
                    </div>
                    
                    <div style="text-align: center; padding: 1rem; background: var(--light-bg); border-radius: 10px;">
                        <div style="font-size: 1.5rem; color: var(--accent-teal);">üî•</div>
                        <div style="font-size: 1.5rem; font-weight: bold;">${userData.progress.currentStreak}</div>
                        <div style="font-size: 0.8rem; color: #666;">Hari Beruntun</div>
                    </div>
                    
                    <div style="text-align: center; padding: 1rem; background: var(--light-bg); border-radius: 10px;">
                        <div style="font-size: 1.5rem; color: var(--accent-orange);">üìö</div>
                        <div style="font-size: 1.5rem; font-weight: bold;">${userData.progress.completedLessons}</div>
                        <div style="font-size: 0.8rem; color: #666;">Pelajaran</div>
                    </div>
                    
                    <div style="text-align: center; padding: 1rem; background: var(--light-bg); border-radius: 10px;">
                        <div style="font-size: 1.5rem; color: var(--secondary-purple);">‚è±Ô∏è</div>
                        <div style="font-size: 1.5rem; font-weight: bold;">${userData.progress.completedLessons * 15}</div>
                        <div style="font-size: 0.8rem; color: #666;">Menit Belajar</div>
                    </div>
                </div>
                
                <button class="action-btn" style="width: 100%; justify-content: center;" onclick="showPage('learn')">
                    <i class="fas fa-plus"></i> Lanjutkan Belajar
                </button>
            `);
        }

        function showLoginModal() {
            showModal('Masuk ke NusaKita', `
                <div style="text-align: center; margin-bottom: 2rem;">
                    <div style="font-size: 4rem;">üîê</div>
                    <h3 style="color: var(--primary-purple); margin-bottom: 1rem;">Masuk ke Akun Anda</h3>
                </div>
                
                <div style="display: grid; gap: 1rem;">
                    <div class="form-group">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-input" placeholder="email@contoh.com" id="loginEmail">
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-input" placeholder="Masukkan password" id="loginPassword">
                    </div>
                    
                    <button class="action-btn" style="width: 100%; justify-content: center;" onclick="handleLogin()">
                        <i class="fas fa-sign-in-alt"></i> Masuk
                    </button>
                    
                    <div style="text-align: center; margin: 1rem 0;">
                        <span style="color: #666;">Atau</span>
                    </div>
                    
                    <button class="action-btn btn-outline" style="width: 100%; justify-content: center;" onclick="showRegisterModal()">
                        <i class="fas fa-user-plus"></i> Buat Akun Baru
                    </button>
                </div>
                
                <p style="text-align: center; margin-top: 2rem; color: #666; font-size: 0.9rem;">
                    Dengan masuk, Anda menyetujui Syarat & Ketentuan kami
                </p>
            `);
        }

        function showRegisterModal() {
            showModal('Buat Akun Baru', `
                <div style="text-align: center; margin-bottom: 2rem;">
                    <div style="font-size: 4rem;">üë§</div>
                    <h3 style="color: var(--primary-purple); margin-bottom: 1rem;">Buat Akun NusaKita</h3>
                </div>
                
                <div style="display: grid; gap: 1rem;">
                    <div class="form-group">
                        <label class="form-label">Nama Lengkap</label>
                        <input type="text" class="form-input" placeholder="Nama lengkap Anda" id="registerName">
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-input" placeholder="email@contoh.com" id="registerEmail">
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-input" placeholder="Minimal 8 karakter" id="registerPassword">
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Konfirmasi Password</label>
                        <input type="password" class="form-input" placeholder="Ulangi password" id="registerConfirmPassword">
                    </div>
                    
                    <button class="action-btn" style="width: 100%; justify-content: center;" onclick="handleRegister()">
                        <i class="fas fa-user-plus"></i> Daftar Sekarang
                    </button>
                    
                    <div style="text-align: center; margin: 1rem 0;">
                        <span style="color: #666;">Sudah punya akun?</span>
                    </div>
                    
                    <button class="action-btn btn-outline" style="width: 100%; justify-content: center;" onclick="showLoginModal()">
                        <i class="fas fa-sign-in-alt"></i> Masuk
                    </button>
                </div>
            `);
        }

        function handleLogin() {
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;
            
            if (!email || !password) {
                showToast('Harap isi semua field!', 'error');
                return;
            }
            
            // Simulasi login berhasil
            showToast('Login berhasil! Selamat datang kembali üéâ', 'success');
            userData.name = email.split('@')[0];
            updateUserProgress();
            closeModal();
        }

        function handleRegister() {
            const name = document.getElementById('registerName').value;
            const email = document.getElementById('registerEmail').value;
            const password = document.getElementById('registerPassword').value;
            const confirmPassword = document.getElementById('registerConfirmPassword').value;
            
            if (!name || !email || !password || !confirmPassword) {
                showToast('Harap isi semua field!', 'error');
                return;
            }
            
            if (password !== confirmPassword) {
                showToast('Password tidak cocok!', 'error');
                return;
            }
            
            if (password.length < 8) {
                showToast('Password minimal 8 karakter!', 'error');
                return;
            }
            
            // Simulasi registrasi berhasil
            showToast('Registrasi berhasil! Silakan login üéâ', 'success');
            showLoginModal();
        }

        function updateUserProgress() {
            document.getElementById('userLevel').innerHTML = `
                <i class="fas fa-star" style="color: var(--accent-yellow);"></i>
                <span>${userData.level}</span>
            `;
        }

        function showModal(title, content) {
            document.getElementById('modalTitle').textContent = title;
            document.getElementById('modalBody').innerHTML = content;
            document.getElementById('mainModal').style.display = 'flex';
        }

        function closeModal() {
            document.getElementById('mainModal').style.display = 'none';
        }

        function showToast(message, type = 'info') {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            
            // Set icon based on type
            let icon = '‚ÑπÔ∏è';
            if (type === 'error') {
                icon = '‚ùå';
                toast.style.background = 'linear-gradient(135deg, #DC143C, #FF6B6B)';
            } else if (type === 'success') {
                icon = '‚úÖ';
                toast.style.background = 'linear-gradient(135deg, #228B22, #32CD32)';
            } else {
                toast.style.background = 'linear-gradient(135deg, var(--primary-purple), var(--secondary-purple))';
            }
            
            toast.innerHTML = `<span>${icon}</span> ${message}`;
            toast.classList.add('show');
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
            }
        });
    </script>
</body>
</html>
